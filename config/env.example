# Configuration de l'application
APP_NAME=Hffintranet
APP_VERSION=1.0.0
APP_LOCALE=fr_FR
APP_DEBUG=true
APP_ENVIRONMENT=dev

# Chemins de base
BASE_PATH_COURT=/Hffintranet
BASE_PATH_LONG=C:/wamp64/www/Hffintranet
BASE_PATH_FICHIER=C:/wamp64/www/Upload/
BASE_PATH_FICHIER_COURT=/Upload/
BASE_PATH_DOCUWARE=C:/wamp64/www/Docuware/
BASE_PATH_LOG=C:/wamp64/www/Hffintranet/var/app_errors.log

# Configuration de la base de données principale
DB_HOST=192.168.0.28
DB_PORT=1433
DB_NAME=HFF_INTRANET_TEST_TEST
DB_USER=sa
DB_PASSWORD=your_database_password_here
DB_DNS_SQLSERV=HFF_INTRANET_V01_TEST_TEST
DB_USERNAME_SQLSERV=sa
DB_PASSWORD_SQLSERV=your_database_password_here

# Configuration de la base de données Dote4
DB_DNS_SQLSERV_4=HFF_INTRANET_V04_TEST
DB_USERNAME_SQLSERV_4=sa
DB_PASSWORD_SQLSERV_4=your_dote4_password_here

# Configuration de la base de données Dote4 GCOT
DB_DNS_SQLSERV_4_GCOT=HFF_GCOT64
# Note: Utilise les mêmes credentials que Dote4

# Configuration de la base de données Informix
DB_DNS_INFORMIX=IPS_HFFPROD_TEST
DB_USERNAME_INFORMIX=informix
DB_PASSWORD_INFORMIX=your_informix_password_here

# Configuration LDAP
LDAP_HOST=192.168.0.1
LDAP_PORT=389
LDAP_DOMAIN=@@fraise.hff.mg
LDAP_DN=OU=HFF Users,DC=fraise,DC=hff,DC=mg

# Configuration du Mailer
MAILER_HOST=smtp.gmail.com
MAILER_PORT=587
MAILER_USER=noreply@hff.mg
MAILER_PASSWORD=your_email_password_here
MAILER_FROM_EMAIL=noreply.email@hff.mg
MAILER_FROM_NAME=noreply

# Configuration de sécurité
SECURITY_CSRF_ENABLED=true
SECURITY_SESSION_FIXATION_STRATEGY=migrate

# Configuration des sessions
SESSION_NAME=HFFSESSION
SESSION_LIFETIME=3600

# Configuration Twig
TWIG_DEBUG=true
TWIG_STRICT_VARIABLES=false

# Configuration de la pagination
PAGINATION_ITEMS_PER_PAGE=20
PAGINATION_MAX_PAGES=10
