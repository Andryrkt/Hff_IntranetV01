				<label for="TotalIdemDeplac" class="label-form">
					Total indemnité de déplacement</label>
				<input type="text" name="TotalIdemDeplac" id="TotalIdemDeplac" class="form-control" style="border-color: orange;" value=" {% set valeur = data.Nombre_Jour is defined and data.idemnity_depl is defined ? idemnityDepl * nombreJour : '' %}{{ valeur }}" readonly>
			</div>
		</div>
		<div class="row">
			<div class="col-2">
				<label for="Devis" class="label-form">Devise:</label>
				{% if data.Devis is defined and data.Devis is not null and data.Devis == "MGA" %}

					<select name="Devis" id="Devis" class="form-select">
						<option value="MGA" selected>MGA</option>
						<option value="EUR">EUR</option>
						<option value="USD">USD</option>
					</select>
				{% elseif data.Devis is defined and data.Devis is not null and data.Devis == "EUR" %}

					<select name="Devis" id="Devis" class="form-select">
						<option value="MGA">MGA</option>
						<option value="EUR" selected>EUR</option>
						<option value="USD">USD</option>
					</select>
				{% elseif data.Devis is defined and data.Devis is not null and data.Devis == "USD" %}

					<select name="Devis" id="Devis" class="form-select">
						<option value="MGA">MGA</option>
						<option value="EUR">EUR</option>
						<option value="USD" semected>USD</option>
					</select>
				{% else %}
					<select name="Devis" id="Devis" class="form-select">
						<option value="MGA">MGA</option>
						<option value="EUR">EUR</option>
						<option value="USD">USD</option>
					</select>
				{% endif %}
			</div>
			<div class="col">

