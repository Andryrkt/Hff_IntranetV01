				<input type="text" name="IdemDeplac" id="IdemDeplac" class="form-control" style="border-color: orange;" oninput="formatEtMettreAJour('IdemDeplac')" onblur="sommeEtIndemniteDeplac('IdemDeplac','Nbjour','TotalIdemDeplac');calculerSommeAll('TotalidemForfait', 'TotalAutredep','TotalIdemDeplac', 'Alldepense');negative('Alldepense')" value=" {% set valeur = data.idemnity_depl  is defined ? data.idemnity_depl : '' %}{{ valeur }}"/>
