{% import "macroForm.html.twig" as macroForm %}
<!-- DEBUT recherche -->
<div class="accordion" id="formAccordion">
	<div class="accordion-item">
		<h2 class="accordion-header">
			<button class="accordion-button enteteAccordion" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
				Formulaire de recherche
			</button>
		</h2>
		<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#formAccordion">
			<div class="accordion-body">
				{{ form_start(form, {'method': 'GET'}) }}
				<div class="row">
					<div class="col-12 col-md-2">
						{{ macroForm.agence_service_change(form.Agence, form.service, 'spinner-service', 'service-container')}}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.typeDemande) }}
						{{ form_row(form.NumDdp) }}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.numFacture) }}
						{{ form_row(form.numCommande) }}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.utilisateur) }}
						{{ form_row(form.statut) }}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.dateDebut) }}
						{{ form_row(form.dateFin) }}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.fournisseur) }}
						<div id="suggestion-fournisseur" class="suggestions-container"></div>
						<div id="loader-fournisseur" class="spinner" style="display: none;">Chargement...</div>
					</div>
				</div>

				<div class="d-flex justify-content-end mb-2">
					<button class="btn btn-warning fw-bold" type="submit">
						<i class="fab fa-searchengin"></i>
						Recherche</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
