{% extends "baseTemplate.html.twig" %}

{% block stylesheets%}
<link href="/Hffintranet/Views/css/new.css" rel="stylesheet"/>
<link href="/Hffintranet/Views/css/dit/ditInsertionOr.css" rel="stylesheet"/>
{% endblock%}

{% import "macroForm.html.twig" as macroForm %}

{% block content %}
	<div class=" container">
		<div class="card">
			<div class="card-body">

				<div class="container">
					<div class="row">
						<div class="col-12 ">
							<h3 class="perso-titre">
								INSERTION OR
							</h3>
						</div>
					</div>
					{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'id': 'upload-form'}}) }}
					{{ form_errors(form)}}
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="row">
								<div class="col-12 col-md-6">{{ form_row(form.numeroDit)}}</div>
								<div class="col-12 col-md-6">{{ form_row(form.numeroOR)}}</div>
							</div>


							<div id="dropzone" style="border: 2px dashed #ccc; padding: 50px; text-align: center;">
								<i class="fa fa-cloud-upload upload-icon"></i>
								<br>

								Glissez et déposez votre fichier PDF ici, ou cliquez pour sélectionner un fichier PDF.
								<br>
								<button type="button" id="upload-btn" class="btn btn-primary">Sélectionner un fichier</button>
							</div>
							{{ form_widget(form.pieceJoint01, {'attr': {'style': 'display:none;'}}) }}
						</div>

						{# <button type="submit" id="submit-btn" class="btn btn-success" style="display:none;">Upload</button> #}


						<div class="col-12 col-md-6">
							<div id="pdf-preview" class="pdf-preview" style="display: none;">
								<embed id="pdf-embed" type="application/pdf" width="100%" height="500px">
							</div>
						</div>
					</div>

					<button type="submit" class="btn bouton mt-2">
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
					{{ form_end(form) }}
				</div>

			</div>
		</div>
	</div>
{% endblock %}
{% block javascript %}
	<script src="/Hffintranet/Views/js/dit/ditInsertionOr.js"></script>
{% endblock %}
