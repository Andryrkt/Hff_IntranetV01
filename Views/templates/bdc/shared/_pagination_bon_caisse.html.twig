	<div>
		<a href="{{ path("export_bon_caisse_excel") }}" class="btn btn-sm bg-success text-white my-3 fw-bold">
			<i class="fas fa-table"></i>
			Excel
		</a>

		<a href="{{ path("bon_caisse_liste") }}" class="btn btn-sm bg-warning text-white my-3 fw-bold">Liste Bons de
			Caisse</a>
	</div>
	<div>
		<p class="fw-bold my-3" id="nombreResultat">{{resultat}}
			RÃ©sultats</p>
	</div>
	<div>
		<p class="fw-bold my-3" id="nombreResultat">{{currentPage ~' / '~ (lastPage)}}
			pages</p>
	</div>
	<div class="navigation">
		{% set queryParams = criteria %}

		{% if currentPage > 1 %}
		<a class="btn btn-dark my-3"
			href="{{ path('bon_caisse_liste', queryParams|merge({'page': currentPage - 1})) }}">
