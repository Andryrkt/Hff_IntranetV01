{% extends "baseTemplate.html.twig" %}
{% block stylesheets%}
	<link rel="stylesheet" href="/Hffintranet/Views/css/list.css">
	<link rel="stylesheet" href="/Hffintranet/Views/css/planning/planning.css">
{% endblock %}
{% block content %}
	<div class="sticky-header-titre">
		<div class="container">
			<h3 class="perso-titre">
				Liste
			</h3>

			{% include "/planning/_formulaire.html.twig" %}
		</div>
	</div>
	<div class="container-fluid">
		<!-- DEBUT tableau -->
		<!-- Bloc fixe en haut -->
			<div class="sticky-header-statut"> <div class="container">
				<div class="my-3 d-flex flex-row">
					<div role="button" tabindex="0" class="fw-bold" id="tout-afficher">
						<small>TOUT AFFICHER |</small>
					</div>
					<div role="button" tabindex="0" id="tout-livre">
						<i class="fa-solid fa-circle text-success"></i>
						<small class="text-success">Tout livré |</small>
					</div>
					<div role="button" tabindex="0" id="partiellement-livre">
						<i class="fa-solid fa-circle text-warning"></i>
						<small class="text-warning">Partiellement livré |</small>
					</div>
					<div role="button" tabindex="0" id="partiellement-dispo">
						<i class="fa-solid fa-circle text-info"></i>
						<small class="text-info">Partiellement dispo |</small>
					</div>
					<div role="button" tabindex="0" id="complet-non-livre">
						<i class="fa-solid fa-circle text-primary"></i>
						<small class="text-primary">Complet non livré |</small>
					</div>
					<div role="button" tabindex="0" id="back-order">
						<small class=" border-end border-start border-danger border-3">
							Back Order
						</small>
					</div>

				</div>

				<div
					class="d-flex justify-content-between">{# <div>
												<a href="{{path("export_planning01")}}" id="excelDit" name="excelplanning" class="btn btn bg-success text-white my-3 fw-bold">
													<i class="fas fa-table"></i>
													Excel</a>
											</div> #}
				</div>
			</div>
		</div>
		<table class="table rounded table-plein-ecran">
		<thead class="table-dark">
				<tr>
					<th>Agence - Service</th>
					<th>Marque</th>
					<th>Modèle</th>
					<th>ID</th>
					<th>N° Série</th>
					<th>N° Parc</th>
					<th>Casier</th>
					<th>Intitulé travaux (commentaire)</th>
					<th>N° OR-Itv</th>
					<th>Date planning</th>
					<th>CST</th>
					<th>Ref</th>
					<th>Dési</th>
					<th>Qté cde OR</th>
					<th>Qté all OR</th>
					<th>Qté reliq OR</th>
					<th>Qté liv OR</th>
					<th>Ctr Marque (num CIS)</th>
					<th>Cde frn</th>
					<th>Statut ctrmrq(recp/cmd=>CIS OR)</th>
					<th>Qté CIS</th>
					<th>Qté all</th>
					<th>Qté rel</th>
					<th>Qté liv</th>
					<th>Statut</th>
					<th>Date statut</th>
					<th>ETA Ivato</th>
					<th>ETA Magasin</th>
					<th>Message</th>
				</tr>
			</thead>
			<tbody>
			 {% for item in data %}
			 	<tr>
				<td> {{item.agenceServiceTravaux}}</td>
				<td> {{item.Marque}}</td>
				<td> {{item.Modele}}</td>
				<td> {{item.Id}}</td>
				<td> {{item.N_Serie}}</td>
				<td> {{item.parc}}</td>
				<td> {{item.casier}}</td>
				<td> {{item.commentaire}}</td>
				<td> {{item.numor_itv}}</td>
				<td> {{item.dateplanning}}</td>
				<td> {{item.cst}}</td>
				<td> {{item.ref}}</td>
				<td> {{item.desi}}</td>
				<td> {{item.qteres_or}}</td>
				<td> {{item.qteall_or}}</td>
				<td> {{item.qtereliquat}}</td>
				<td> {{item.qteliv_or}}</td>
				<td> {{item.numcis}}</td>
				<td> {{item.numerocmd}}</td>
				<td> {{item.statut_ctrmq}}</td>
				<td> {{item.qteORlig_cis}}</td>
				<td> {{item.qtealllig_cis}}</td>
				<td> {{item.qterlqlig_cis}}</td>
				<td> {{item.qtelivlig_cis}}</td>
				<td> {{item.statut}}</td>
				<td> {{item.datestatut}}</td>
				<td> {{item.Eta_ivato}}</td>
				<td> {{item.Eta_magasin}}</td>
				<td> {{item.message}}</td>
				<td> {{item.ORD}}</td>
				
				</tr>
			 {% endfor %}
			</tbody>
		</table>

		{% include "/dit/shared/_modalNiveauUrgence.html.twig"  %}
	{% endblock %}
	{% block javascript %}
		<script script src="https://cdn.sheetjs.com/xlsx-0.20.1/package/dist/xlsx.full.min.js"></script>
		<script src="/Hffintranet/Views/js/planning/planning.js" type="module"></script>
		<script src="/Hffintranet/Views/js/planning/listPlanning.js" type="module"></script>
		{#<script src="/Hffintranet/Views/js/planning/main.js" type="module"></script>#}
	{% endblock %}
