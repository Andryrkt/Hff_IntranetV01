{% extends "baseTemplate.html.twig" %}

{% block content %}
    <div class="container mt-4" style="margin-top:5rem !important">

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.matricule) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.nomPrenoms) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.actif) }}
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                    <a href="{{ path('groupe_direction_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const matriculeSelect = document.querySelector('[name="groupe_direction[matricule]"]');
        const nomPrenomsField = document.querySelector('[name="groupe_direction[nomPrenoms]"]');

        if (matriculeSelect && nomPrenomsField) {
            // Lors du changement de matricule, mettre Ã  jour le champ nom/prenom
            matriculeSelect.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                if (selectedOption) {
                    const nomPrenoms = selectedOption.getAttribute('data-nom-prenom');
                    nomPrenomsField.value = nomPrenoms || '';
                } else {
                    nomPrenomsField.value = '';
                }
            });

        }
    });
    </script>
{% endblock %}