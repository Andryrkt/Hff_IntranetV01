{% set fileType = fileType ?? 'PDF' %}
{% set class = fileType == 'XLSX' ? 'text-success' : 'text-warning' %}
{% set bgColor = fileType == 'XLSX' ? 'bg-success' : 'bg-warning' %}
<div id="dropzone-{{ id }}" style="border: 2px dashed #ccc; padding: 50px; text-align: center;">
	<i class="fa fa-cloud-upload {{ class }} fs-1 mb-3"></i>
	<br>
	Glissez et déposez votre fichier
	<b>{{ fileType }}</b>
	ici, ou cliquez pour sélectionner un fichier
	<b>{{ fileType }}</b>.
	<br>
	<button type="button" id="upload-btn-{{ id }}" class="btn btn-primary {{ bgColor }}">Sélectionner un fichier</button>
</div>

{{ form_widget(form[fieldName], {'attr': {'style': 'position: absolute; left: -9999px; opacity: 0;'}}) }}
{{ form_errors(form[fieldName]) }}

<!-- Conteneur pour afficher le nom du fichier -->
<div class="file-name" id="file-name-{{ id }}" style="margin-top: 10px;"></div>
<div class="file-size" id="file-size-{{ id }}"></div>
