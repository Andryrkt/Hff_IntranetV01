<div class="row mb-3">
	<h3 class="perso-titre">Timeline de la DA</h3>
</div>

<div class="mb-4">
	<div class="ps-4">
		{% for item in timelineData.DA %}
			<div class="timeline-item">
				<div class="timeline-dot {{ item.dotClass }}"></div>
				<div class="timeline-content">
					<div class="d-flex flex-row align-items-center gap-4">
						<div class="timeline-date">{{ item.date }}</div>
						<div class="timeline-status">{{ item.statut }}</div>
					</div>
					<div class="timeline-duration mt-4">{{ item.nbrJours }}</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
<div class="row px-4 pb-4">
	{% for numeroBC, timelineData in timelineData.BC %}
		<div class="col">
			<div class="fw-bold fs-6 mb-2 ps-5">BC nÂ°
				{{ numeroBC }}</div>
