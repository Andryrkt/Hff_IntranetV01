<div class="row mb-3">
	<h3 class="perso-titre">
		<span class="urgency-level">{{ demandeAppro.niveauUrgence }}</span>
		Documents rattachés à la Demande d'achats
	</h3>
</div>
<div class="row mb-2">
	<div class="col-9 col-md-9">
		<div class="card p-3">
			<div id="file-viewer">
				<p>Sélectionnez un fichier pour l'afficher ici</p>
			</div>
		</div>
	</div>
	<div class="col-3 col-md-3">
		{% for fichierData in fichiers %}
			<div class="list-file-item {{ fichierData.colorClass }} document-type mb-3 p-3 rounded">
				<div class="d-flex align-items-center mb-2">
					<span class="badge bg-light text-dark me-2">
						<i class="{{ fichierData.icon }}"></i>
					</span>
					<strong>{{ fichierData.type }}</strong>
				</div>

				{% if fichierData.fichiers is not empty %}
					<ul class="list-unstyled mb-0">
						{% for f in fichierData.fichiers %}
							<li class="file-item d-flex justify-content-between align-items-center p-2 rounded mb-1" data-doc-label-type="{{ fichierData.labelType }}" {% if f.numBC is defined %} data-related-num-bc="{{ f.numBC }}" {% endif %}>
								<small class="text-muted">{{ f.nom }}</small>
								<a href="{{ f.path }}" download class="download-link" data-doc-type="{{ fichierData.type }}" data-doc-name="{{ f.nom }}">
									<span class="badge bg-light text-primary">
										<i class="fas fa-download"></i>
									</span>
								</a>
							</li>
						{% endfor %}
					</ul>
				{% else %}
					<small class="text-muted">
						Aucun
						{{ fichierData.type }}
						rattaché à la demande d'achat.
					</small>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</div>
