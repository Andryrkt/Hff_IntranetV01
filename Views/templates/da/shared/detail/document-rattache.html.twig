<div class="row mb-3">
	<h3 class="perso-titre">
		<span class="urgency-level">{{ dit.idNiveauUrgence.description }}</span>
		Documents rattachés à la Demande d'achats
	</h3>
</div>
<div class="row mb-2">
	<div class="col-9 col-md-9">
		<div class="card p-3">
			<div id="file-viewer">
				<p>Sélectionnez un fichier pour l'afficher ici</p>
			</div>
		</div>
	</div>
	<div class="col-3 col-md-3">
		<div class="card">
			<div class="card-body p-0">
				<label class="nav-top">
					<span>Statut ticket</span>
				</label>
				<div class="statut">
					{% for type, fichierData in fichiers %}
						<div class="list-file-item">
							<div class="d-flex justify-content-between align-items-center p-2">
								<div class="ms-2 me-auto">
									<div class="fw-bold">
										<span class="badge bg-light text-dark fw-bold">
											<i class="{{ fichierData.icon }}"></i>
										</span>
										{{ fichierData.type }}
									</div>

									{% if fichierData.fichiers is not empty %}
										<ul class="list-unstyled mb-0">
											{% for f in fichierData.fichiers %}
												<li>
													<small class="text-muted">{{ f.nom }}</small>
													<a href="{{ f.path }}" download>
														<span class="badge bg-light text-primary fw-bold">
															<i class="fas fa-download"></i>
														</span>
													</a>
												</li>
											{% endfor %}
										</ul>
									{% else %}
										<small class="text-muted">
											Aucun
											{{ fichierData.type }}
											rattaché à la demande d'achat.
										</small>
									{% endif %}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>

			</div>
		</div>
	</div>
</div>
