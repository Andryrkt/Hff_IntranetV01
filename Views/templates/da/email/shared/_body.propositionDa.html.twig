{% set service_demandeur = demandeAppro.achatDirect ? 'du service emetteur' : 'de l’Atelier' %}

<p>
	Une nouvelle proposition a été créée par
	<b>{{ tab.userConnecter }}</b>.
</p>
<p>
	<b>Détails du demande :</b>
	<ul>
		<li>
			<b>Numéro de la demande :</b>
			{{ demandeAppro.numeroDemandeAppro }}
		</li>
		<li>
			<b>Objet de la demande :</b>
			{{ demandeAppro.objetDal }}
		</li>
		<li>
			<b>Détail de la demande :</b>
			<div class="espace">
				{{ demandeAppro.detailDal|raw }}
			</div>
		</li>
		<li>
			<b>Observation:</b>
			<div class="espace">
				{{ tab.observation|raw }}
			</div>
		</li>
	</ul>
</p>
<hr>
<p>Demande(s)
	{{ service_demandeur }}
	avec proposition(s) de l'Appro.
</p>

<table>
	<thead style="background-color:#D9E1F2;">
		<tr>
			<th rowspan="2" align="center" valign="middle">DESIGNATION</th>
			<th rowspan="2" align="center" valign="middle">QTE</th>
			<td colspan="{{ listeFournisseurs|length }}" align="center">FOURNISSEURS</td>
		</tr>
		<tr>
			{% for frn in listeFournisseurs %}
				<th align="right">{{ frn }}</th>
			{% endfor %}
		</tr>
	</thead>
	<tbody>
		{% for dal in demandeAppro.DAL %}
			{% set designation = dal.artDesi %}
			{% set qte = dal.qteDem %}
			<tr>
				<td>{{ designation }}</td>
				<td align="center">{{ qte }}</td>
				{% for frn in listeFournisseurs %}
					{% set cell = fournisseurs[frn][designation]|default({}) %}
					<td align="right" class="{{ cell.choix|default(false) ? 'choisi' : '' }}">
						{{ cell.prix|default('') }}
					</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table><br><hr>
