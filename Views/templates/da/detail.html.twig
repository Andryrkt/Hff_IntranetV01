{% extends "baseTemplate.html.twig" %}

{% block stylesheets%}
	<link href="{{ App.base_path }}/Views/css/new.css" rel="stylesheet"/>
	<link href="{{ App.base_path }}/Views/css/da/style.css" rel="stylesheet"/>
	<link href="{{ App.base_path }}/Views/css/dit/news.css" rel="stylesheet"/>
{% endblock %}

{% import "macroForm.html.twig" as macroForm %}

{% block overlay %}
	{% include "/shared/_overlay.html.twig"  %}
{% endblock %}

{% block content %}
	<div class=" container-fluid">
		<div class="card">
			<div class="card-body">
				{{ form_start(form, { 'attr': { 'id': 'myForm' } }) }}
				{{ form_errors(form)}}
				<div class="container-fluid">
					<div class="row">
						<h3 class="perso-titre">
							Détails Demande d'achat, n°
							{{numDa}}
						</h3>
					</div>

					<div class="row">
						<div class="col-12 col-md-4">
							{{ macroForm.sousTitre('Information sur la demande') }}
							{{ form_row(form.objetDal, { 'attr': { 'disabled': true} })}}
							<div class="mb-3 position-relative">
								{{ form_row(form.detailDal, { 'attr': { 'disabled': true} }) }}
								<span id="charCount" class="position-absolute bottom-0 end-0 p-0 small text-muted"></span>
							</div>
							{{ form_row(form.dateFinSouhaite, { 'attr': { 'disabled': true} }) }}
						</div>
						<div class="col-12 col-md-4">
							{{ macroForm.sousTitre('Agence et service') }}
							<div class="row">
								<div class="col-6 col-md-6">
									{{ macroForm.sousTitre('Emetteur') }}
									{{ form_row(form.agenceEmetteur) }}
									{{ form_row(form.serviceEmetteur) }}
								</div>
								<div class="col-6 col-md-6">
									{{ macroForm.sousTitre('Débiteur') }}
									{{ form_row(form.agenceDebiteur) }}
									{{ form_row(form.serviceDebiteur) }}
								</div>
							</div>
						</div>
						<div class="col-12 col-md-4">
							{{ macroForm.sousTitre('Information Matériel / DIT') }}
							<div class="row">
								<div class="col-md-6 col-6">
									{{ form_row(form.idMateriel) }}
									{{ form_row(form.serie) }}
								</div>
								<div class="col-md-6 col-6">
									{{ form_row(form.parc) }}
									{{ form_row(form.dit) }}
								</div>
								{{ form_row(form.objetDit) }}
								{% if nomFichierRefZst is not null and estAte %}
									<a class="fw-bold" href="/Upload/da/ba/{{nomFichierRefZst}}" download>Télécharger ici le fichier contenant les références ZST</a>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="d-flex justify-content-end d-none">
						<button type="button" id="add-child" class="btn bouton mt-2" {{ true ? 'disabled' : ''}}>
							<i class="fas fa-plus"></i>
							Ajouter une ligne
						</button>
					</div>

					<table class="table rounded table-plein-ecran mt-4">
						<thead class="table-dark text-center">
							<tr>
								<th class="w-15">Famille</th>
								<th class="w-15">Sous-famille</th>
								<th class="w-20">Désignation</th>
								<th class="w-10">Fournisseur</th>
								<th class="w-10">Date fin souhaitée</th>
								<th class="w-5">Quantité</th>
								<th class="w-25">Commentaire</th>
							</tr>
						</thead>
					</table>
					<div id="children-container">
						{% for DAL in form.DAL %}
							{% set ligne = loop.index %}
							<div id="demande_appro_form_DAL_{{ ligne }}">
								<div class="row g-3">
									<div class="w-15">
										{{ form_widget(DAL.codeFams1, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="w-15">
										<div class="spinner-container">
											<div class="spinner-load m-auto" id="spinner_{{ ligne }}_codeFams2" style="display: none;margin-bottom: 0px !important;transform: translateY(-2px);">
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
												<div></div>
											</div>
										</div>
										<div id="container_{{ ligne }}_codeFams2">
											{{ form_widget(DAL.codeFams2, { 'attr': { 'disabled': true} }) }}
										</div>
									</div>
									<div class="w-20">
										{{ form_widget(DAL.artDesi, { 'attr': { 'disabled': true} }) }}
										<div id="suggestion_{{ ligne }}_artDesi" class="suggestions-container"></div>
										<div id="spinner_container_{{ ligne }}_artDesi" class="text-center" style="display: none;">
											<div class="text-overlay">
												Veuillez patienter s'il vous plaît! Chargement des données
											</div>
											<div class="loader-points"></div>
										</div>
									</div>
									<div class="w-10">
										{{ form_widget(DAL.nomFournisseur, { 'attr': { 'disabled': true} }) }}
										<div id="suggestion_{{ ligne }}_nomFournisseur" class="suggestions-container"></div>
										<div id="spinner_container_{{ ligne }}_nomFournisseur" class="text-center" style="display: none;"></div>
									</div>
									<div class="w-10">
										{{ form_widget(DAL.dateFinSouhaite, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="w-5">
										{{ form_widget(DAL.qteDem, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="w-25">
										{{ form_widget(DAL.commentaire, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.artConstp, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.artRefp, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.artFams1, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.artFams2, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.numeroFournisseur, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.catalogue, { 'attr': { 'disabled': true} }) }}
									</div>
									<div class="d-none">
										{{ form_widget(DAL.numeroLigne, { 'attr': { 'disabled': true}, 'data': ligne}) }}
									</div>
								</div>
								<div class="mt-3 mb-3"></div>
							</div>
						{% endfor %}
					</div>

					<div id="child-prototype" style="display: none;">
						{{ form_widget(form.DAL.vars.prototype)|raw }}
					</div>

					<div class="row d-none">
						{{ form_row(form.observation, { 'attr': { 'disabled': true} })}}
					</div>
				</div>

				<div class="d-flex justify-content-end d-none">
					<button type="submit" class="btn bouton mt-2" {{ true ? 'disabled' : ''}}>
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>

	</div>
	<div class=" container-fluid mt-3">
		<div class="card">
			<div class="card-body">
				<div class="row">
					<h3 class="fw-bold">Observations</h3>
					{% for observation in observations %}
						<p class="mb-0">
							<b>{{observation.utilisateur}}</b>
							<small>{{observation.dateCreation|date('d/m/Y H:i')}}</small>
						</p>
						<p>{{observation.observation}}</p>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascript %}
	<script type="module" src="{{ App.base_path }}/Views/js/da/new/new.js" type="module"></script>
{% endblock %}
