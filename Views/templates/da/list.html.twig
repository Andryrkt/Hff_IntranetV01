{% extends "baseTemplate.html.twig" %}

{% block stylesheets%}
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/list.css">
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/da/list.css">
{% endblock %}

{% import "macroForm.html.twig" as form %}

{% block overlay %}
	{% include "/shared/_overlay.html.twig"  %}
{% endblock %}

{% block content %}

	<div class="container mb-3">
		<h3 class="perso-titre">
			Liste des demandes d'achat
		</h3>
		{% include "/partials/_notification.html.twig" %}
		{% include "/da/shared/listeDA/_formulaireRecherche.html.twig" %}
		{# {% include "/da/shared/listeDA/_pagination.html.twig" %} #}
	</div>

	<div class="container-fluid">
		<table class="table table-plein-ecran">
			<thead class="table-dark">
				<tr>
					<th>N° Demande</th>
					<th>N° DIT</th>
					<th>Demandeur</th>
					<th>Date de demande</th>
					<th>Statut</th>
					<th>Famille</th>
					<th>Sous-famille</th>
					<th>Réference</th>
					<th>Désignation</th>
					<th>Qté dem</th>
					<th>Nbre Frn assigné</th>
					<th>Date fin souhaitée</th>
				</tr>
			</thead>
			<tbody id="tableBody">
				{% for item in data %}
					{% set da = item.da %}
					{% for dal in item.DAL %}
						<tr>
							<td>
								{% if serviceAppro %}
									{{ da.numeroDemandeAppro }}
								{% else %}
									<a href="{{ path('da_edit', { id : da.dit.id }) }}" target="_blank">
										{{ da.numeroDemandeAppro }}
									</a>
								{% endif %}
							</td>
							<td>{{ da.numeroDemandeDit }}</td>
							<td>{{ da.demandeur }}</td>
							<td>{{ da.dateCreation | date('d/m/Y') }}</td>
							<td>{{ dal.statutDal }}</td>
							<td>{{ dal.artFams1 ?? '-' }}</td>
							<td>{{ dal.artFams2 ?? '-' }}</td>
							{% if dal.estModifier %}
								<td>{{ dal.artRefp and dal.artRefp != '-'? dal.artRefp ~ '*' : '-' }}</td>
							{% else %}
								<td>{{ dal.artRefp ?? '-' }}</td>
							{% endif %}
							<td>
								{% if serviceAtelier %}
									{{ dal.artDesi }}
								{% else %}
									<a href="{{ path('da_proposition', { id : da.id }) }}" class="designation-btn" data-numero-ligne="{{ dal.numeroLigne }}" target="_blank">
										{{ dal.artDesi }}
									</a>
								{% endif %}

							</td>
							<td>{{ dal.qteDem }}</td>
							<td>0</td>
							<td>{{ dal.dateFinSouhaite | date('d/m/Y') }}</td>
						</tr>
					{% endfor %}
				{% endfor %}
			</tbody>
		</table>
	</div>

	<!-- FIN tableau -->
{% endblock %}

{% block javascript %}
	<script type="module" src="{{ App.base_path }}/Views/js/da/listeDa/list.js" type="module"></script>
{% endblock %}
