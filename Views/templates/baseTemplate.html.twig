<!DOCTYPE html>
<html lang="fr">
	<head>
		{% block head %}
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<!-- Ajout essentiel pour le responsive -->

			<!-- CSS -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
			<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
			<link
			href="{{ asset('css/styles.css') }}" rel="stylesheet">
			<!-- Utilisation de asset() -->

			<link rel="shortcut icon" href="{{ asset('assets/favicon.jpg') }}">
			{% block stylesheets %}{% endblock %}

			<title>
				{% block title %}Hff Intranet
				{% endblock %}
			</title>
		{% endblock %}
	</head>
	<body
		class="d-flex flex-column min-vh-100">
		<!-- Structure flex pour le footer en bas -->
		{% block overlay %}
			<div
				id="loading-overlay" class="d-none">
				<!-- Ajout de d-none par défaut -->
				<div class="spinner-overlay"></div>
				<div class="text-overlay text-white">Veuillez patienter s'il vous plaît!</div>
			</div>
		{% endblock %}

		<div
			class="flex-grow-1">
			<!-- Contenu principal -->
			{% block nav %}
				{% include "partials/_navigation.html.twig" %}
			{% endblock %}

			<main
				class="container my-4">
				<!-- Container pour le contenu principal -->
				{% block content %}{% endblock %}
			</main>
		</div>

		{% block footer %}
			{# {% include "partials/_footer.html.twig" %} #}
		{% endblock %}

		<!-- Modals -->
		{% include "shared/_notificationToast.html.twig" %}
		{% include "shared/_modalConfirmation.html.twig" %}
		{% include "shared/_modalDemandePaiement.html.twig" %}
		{% include "shared/_modalNouveauTicket.html.twig" %}

		<!-- JS -->
		<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		<!-- Bundle avec Popper -->
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
		<script src="{{ asset('js/scripts.js') }}" type="module"></script>

		{% block javascripts %}{% endblock %}
	</body>
</html>
