{% extends "baseTemplate.html.twig" %}

{% block title %}
	Choix Société
{% endblock %}

{% block breadCrumb %}{% endblock %}

{% block stylesheets %}
	<link href="{{ App.base_path }}/Views/css/new.css?v=2025.10.22.08.00" rel="stylesheet"/>
{% endblock %}


{% block content %}
	<div class=" container mt-6 mb-4">
		<div class="card">
			<div class="card-body">
				<div class="container">
					{{ form_start(form)}}
					{{ form_errors(form)}}
					<div class="row d-flex justify-content-center mb-4">
						<h3 class="perso-titre">Veuillez choisir une société</h3>
						<div class="col-12 col-md-6 mt-4">
							{{ form_row(form.societe)}}
							{{ form_errors(form.societe)}}
						</div>
					</div>

					<div class="d-flex justify-content-end">
						<button type="submit" class="btn bouton mt-2" id="bouton-cde-fnr" data-confirmation data-form="#dit-form" data-confirmation-message="Vous êtes en train d'enregistrer une demande d'intervention">
							Suivant
							<i class="fas fa-arrow-right"></i>
						</button>
					</div>
					{{ form_end(form)}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
