{% extends "baseTemplate.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ App.base_path }}/Views/css/list.css">
{% endblock %}

{% block content %}
    <div class="container">
        <h3 class="perso-titre">
            Liste des Demandes de Congé
        </h3>
        {% include "/ddc/shared/_formulaireRechercheConge.html.twig" with {'form': form} %}
        {% include "/ddc/shared/_pagination_conge.html.twig" %}
    </div>

    <div class="container-fluid">
        <table class="table rounded table-plein-ecran">
            <thead class="table-dark">
                <tr>
                    <th>PDF Demande</th>
                    <th>Statut</th>
                    <th>Sous-type</th>
                    <th>N° Demande</th>
                    <th>Date demande</th>
                    <th>Matricule</th>
                    <th>Nom et Prénoms</th>
                    <th>Agence Débiteur</th>
                    <th>Agence/Service</th>
                    <th>Email</th>
                    <th>Motif</th>
                    <th>Durée</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                </tr>
            </thead>
            <tbody>
                {% for demande in data %}
                    {% set classeStatut = '' %}
                    {% set styleStatut = '' %}

                    {% if demande.statutDemande | trim == 'VALIDEE' %}
                        {% set classeStatut = 'bg-success' %}
                    {% elseif demande.statutDemande | trim == 'EN ATTENTE' %}
                        {% set classeStatut = 'bg-warning' %}
                    {% elseif demande.statutDemande | trim == 'REJETEE' %}
                        {% set classeStatut = 'bg-danger' %}
                    {% elseif demande.statutDemande | trim == 'EN COURS' %}
                        {% set classeStatut = 'bg-info' %}
                    {% endif %}

                    <tr>
                        <td>
                            {% if demande.pdfDemande %}
                                <a href="{{ App.base_path }}/uploads/pdf/{{ demande.pdfDemande }}" target="_blank" class="btn btn-sm btn-primary">
                                    <i class="fas fa-file-pdf"></i> Voir
                                </a>
                            {% else %}
                                <span class="text-muted">Aucun PDF</span>
                            {% endif %}
                        </td>

                        <td class="{{ classeStatut }}" style="{{ styleStatut }}">{{ demande.statutDemande }}</td>
                        <td>{{ demande.sousTypeDocument }}</td>
                        <td>{{ demande.numeroDemande }}</td>
                        <td>{{ demande.dateDemande|date('d/m/Y') }}</td>
                        <td class="text-center">{{ demande.matricule }}</td>
                        <td>{{ demande.nomPrenoms }}</td>
                        <td>{{ demande.agenceDebiteur }}</td>
                        <td>{{ demande.agenceService }}</td>
                        <td>{{ demande.adresseMailDemandeur }}</td>
                        <td>{{ demande.motifConge }}</td>
                        <td>{{ demande.dureeConge }} jours</td>
                        <td>{{ demande.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ demande.dateFin|date('d/m/Y') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="14" class="text-center">Aucune demande trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="pagination justify-content-center mt-3">
        {% if currentPage > 1 %}
            <a href="?page={{ currentPage - 1 }}" class="page-link">Précédent</a>
        {% endif %}
        
        {% for i in 1..lastPage %}
            <a href="?page={{ i }}" class="page-link {% if i == currentPage %}active{% endif %}">{{ i }}</a>
        {% endfor %}
        
        {% if currentPage < lastPage %}
            <a href="?page={{ currentPage + 1 }}" class="page-link">Suivant</a>
        {% endif %}
    </div>
{% endblock %}

