{% extends "baseTemplate.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .documentation-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .breadcrumb {
            background: #f8f9fa;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        
        .breadcrumb a {
            color: #667eea;
            text-decoration: none;
        }
        
        .breadcrumb a:hover {
            text-decoration: underline;
        }
        
        .file-header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            border-left: 4px solid #667eea;
        }
        
        .file-title {
            font-size: 2rem;
            color: #2d3748;
            margin-bottom: 10px;
        }
        
        .file-meta {
            color: #718096;
            font-size: 0.9rem;
        }
        
        .file-content {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            line-height: 1.8;
            color: #4a5568;
        }
        
        .file-content h1,
        .file-content h2,
        .file-content h3,
        .file-content h4,
        .file-content h5,
        .file-content h6 {
            color: #2d3748;
            margin-top: 30px;
            margin-bottom: 15px;
        }
        
        .file-content h1 {
            font-size: 2rem;
            border-bottom: 2px solid #e2e8f0;
            padding-bottom: 10px;
        }
        
        .file-content h2 {
            font-size: 1.6rem;
            color: #667eea;
        }
        
        .file-content h3 {
            font-size: 1.3rem;
        }
        
        .file-content p {
            margin-bottom: 15px;
        }
        
        .file-content code {
            background: #f7fafc;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            color: #e53e3e;
        }
        
        .file-content pre {
            background: #2d3748;
            color: #e2e8f0;
            padding: 20px;
            border-radius: 8px;
            overflow-x: auto;
            margin: 20px 0;
        }
        
        .file-content pre code {
            background: none;
            color: inherit;
            padding: 0;
        }
        
        .file-content ul,
        .file-content ol {
            margin: 15px 0;
            padding-left: 30px;
        }
        
        .file-content li {
            margin-bottom: 8px;
        }
        
        .file-content blockquote {
            border-left: 4px solid #667eea;
            padding-left: 20px;
            margin: 20px 0;
            color: #718096;
            font-style: italic;
        }
        
        .file-content table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        
        .file-content th,
        .file-content td {
            border: 1px solid #e2e8f0;
            padding: 12px;
            text-align: left;
        }
        
        .file-content th {
            background: #f7fafc;
            font-weight: 600;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 20px;
            padding: 10px 15px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .back-link:hover {
            background: #667eea;
            color: white;
            text-decoration: none;
        }
        
        .back-link::before {
            content: "←";
            margin-right: 8px;
        }
        
        .toc {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        
        .toc h3 {
            margin-top: 0;
            color: #2d3748;
        }
        
        .toc ul {
            list-style: none;
            padding-left: 0;
        }
        
        .toc li {
            margin-bottom: 5px;
        }
        
        .toc a {
            color: #667eea;
            text-decoration: none;
        }
        
        .toc a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block content %}
<div class="documentation-container">
    <div class="breadcrumb">
        <a href="{{ path('documentation_index') }}">Documentation</a> 
        <span> / </span>
        <a href="{{ path('documentation_category', {'category': category}) }}">{{ category|title }}</a>
        <span> / </span>
        <span>{{ title }}</span>
    </div>

    <a href="{{ path('documentation_category', {'category': category}) }}" class="back-link">
        Retour à {{ category|title }}
    </a>

    <div class="file-header">
        <h1 class="file-title">{{ title }}</h1>
        <div class="file-meta">
            Catégorie: {{ category|title }} | 
            Fichier: {{ file }}.md
        </div>
    </div>

    <div class="file-content">
        {{ content|raw }}
    </div>
</div>
{% endblock %}
