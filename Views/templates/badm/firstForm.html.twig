{% extends "baseTemplate.html.twig" %}

{% import "macroForm.html.twig" as formMacro %}

{% block content %}


	<div class="container">
		<div class="card">
			<div class="card-body">
				<div class="d-flex  flex-row-reverse px-2">
					<h3 class="perso-titre">Demande mouvement mat√©riel</h3>
				</div>
				{% include "/partials/_notification.html.twig" %}

				{{ form_start(form)}}
				{{ form_errors(form)}}
				<div class="row">
					<div class="col-12 col-md-4">
						{{ form_row(form.agenceEmetteur)}}
					</div>
					<div class="col-12 col-md-4">
						{{ form_row(form.serviceEmetteur)}}
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-lg-8 col-md-6">
						{{ form_row(form.typeMouvement)}}
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-4">{{ form_row(form.idMateriel)}}</div>
					<div class="col-12 col-md-4">{{ form_row(form.numParc)}}</div>
					<div class="col-12 col-md-4">{{ form_row(form.numSerie)}}</div>
				</div>
				<div class="row mt-2">
					{{ formMacro.button('submit', 'Suivant','enregistrer', 'color')}}
				</div>
				{{ form_end(form)}}
			</div>
		</div>
	</div>

{% endblock content %}

{% block javascript %}
	<script type="module" src="/Hffintranet/Views/js/badm/firstForm.js"></script>
{% endblock %}
