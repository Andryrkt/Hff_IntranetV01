<div class="container my-5">

    <h2>Nouvelle Bordereau d’Acquisition et de Mouvement Matériel</h2>

    <form action="/Hffintranet/index.php?action=envoiFormCompleBadm" method="post" name="form">
        <input type="hidden" name="codeMouvement" value="{{codeMouvement}}">
        <input type="hidden" name="idMateriel" value="{{items.0.num_matricule}}">

        <div class="row">    
          {{ form.inputReadonly('dateDemande', 'Date', dateDemande|date('d/m/Y'), {endpoint: '2', class: 'offset-10'}) }}
        </div>

        <div class="row">
            {{ form.sousTitre('Caractéristiques du matériel')}}
        </div>
        <div class="row">
            {% for item in items %}
                {{form.inputReadonly('designation', 'Désignation ', item.designation,{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('idMateriel', 'ID matériel ', item.num_matricule,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('numSerie', 'N° Série ', item.num_serie,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('numParc', 'N° Parc  ', item.num_parc,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                
            {% endfor %}
        </div>
        <div class="row">
            {% for item in items %}
                {{form.inputReadonly('groupe', 'Groupe ', item.groupe2,{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('constructeur', 'Constructeur', item.constructeur ,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('modele', 'Modèle ', item.modele,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('anneeModele', 'Année du modèle', item.annee,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            {% endfor %}
        </div>
        <div class="row">
            {{form.inputReadonly('dateAchat', 'Date d’achat ', items.0.date_achat|date("m/d/Y"),{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
        </div>



        <div class="row">
            {{ form.sousTitre('Service émetteur')}}
        </div>
        <div class="row">
            
            {{form.inputReadonly('agenceEmetteur', 'Agence', agenceEmetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('serviceEmetteur', 'Service', serviceEmetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('casierEmetteur', 'Casier', items.0.casier_emetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            
        </div>



        <div class="row">
            {{ form.sousTitre('Service destinataire')}}
        </div>
        <div class="row">
            {{form.select('agenceDestinataire', 'Agence', agenceDestinataire,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.select('serviceDestinataire', 'Service',{Admin:'80 Admin', Energie: '90 Energie'},{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            
        </div>
        <div class="row">
            {{form.select('casierDestinataireAgence', 'Casier Agence ou CLient', {Tana:'01 Tana',  bira :'02 Bira'},{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputText('casierDestinataireChantier', 'Casier Chantier', '',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.select('casierDestinataireStd', 'Casier STD', {'':'', STD_BY: 'STD BY', ATE: 'ATE', PANNE: 'PANNE'},{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
        </div>
        <div class="row">
            {{form.inputText('motifArretMateriel', 'Motif Arrêt Materiel', '',{required: 'required', endpoint: '12', maxlength: '100' } )}}
        </div>




        <div class="row">
            {{ form.sousTitre('Entrée en parc')}}
        </div>
        <div class="row">

            {{form.inputReadonly('etatAchat', 'Etat à l’achat:', items.0.mmat_nouo,{required: 'required', endpoint: '12', class: ' col-md-6'})}}
            {{form.inputDate('dateMiseLocation', 'Date de mise en location', '',{endpoint: '12', class: ' col-md-6'})}}    
        </div>



        <div class="row">
            {{ form.sousTitre('Valeur (MGA)')}}
        </div>
        <div class="row">
            {{form.inputReadonly('coutAcquisition', 'Coût d’acquisition', coutAcquisition,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('amortissement', 'Amortissement', items.0.amortissement,{endpoint: '12', class: 'col-lg-4 col-md-6'})}} 
            {{form.inputReadonly('valeurNetComptable', 'VNC', vnc,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}   
        </div>



        <div class="row">
            {{ form.sousTitre('Cession d’actif')}}
        </div>
        <div class="row">
            {{form.inputText('nomClient', 'Nom client', '',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.select('modalitePaiement', 'Modalité de paiement', {Traite:'Traite', Cheque:'Chèque', Virement:'Virement'},{endpoint: '12', class: 'col-lg-4 col-md-6'})}} 
            {{form.inputNumber('prixHt', 'Prix HT', '',{ step:'0.01',  endpoint: '12', class: 'col-lg-4 col-md-6'})}}   
        </div>




        <div class="row">
            {{ form.sousTitre('Mise au rebut')}}
        </div>
        <div class="row">
            {{form.inputText('motifMiseRebut', 'Motif de mise au rebut', '',{endpoint: '12', maxlength: '100'})}}     
        </div>




        <div class="row">
            {{ form.sousTitre('Etat machine')}}
        </div>
        <div class="row">
            {{form.inputReadonly('heuresMachine', 'Heures machine', items.0.heure,{endpoint: '12', class: 'col-md-6'})}}
            {{form.inputReadonly('kilometrage', 'Kilométrage', items.0.km,{endpoint: '12', class: ' col-md-6'})}}    
        </div>



        <div class="row mt-5">
            {{form.button('submit', 'Envoyer', 'enregistrer', 'primary')}}
            {# {{form.button('annuler', 'Annuler', 'reset', 'secondary')}} #}
        </div>
    </form>
</div>        
