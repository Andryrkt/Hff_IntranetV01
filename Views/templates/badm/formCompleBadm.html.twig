{% extends "baseTemplate.html.twig" %}

        {% block stylesheets%} 
            <link href="/Hffintranet/Views/css/badm/formCompleBadm.css" rel="stylesheet" />
        {% endblock%}

{% import "macroForm.html.twig" as form %}



{% block content %}
{% include "/main/Principe.html.twig" %}




<div class="container my-5">

    <div class="row">
        <div class="col-12 col-md-11">
            <h2 class="fw-bold fs-1" style="color:#0e4194;">Nouveau Bordereau d’Acquisition et de Mouvement Matériel</h2>
        </div>
        
        <div class=" col-12 col-md-1">     
            <a href="/Hffintranet/index.php?action=formBadm" class="tablinks p-2 btn btn-outline-warning " style="text-decoration: none;color:black">Retour</a>
        </div>
    </div>
    <div class="row">
        
    </div>


    <form action="/Hffintranet/index.php?action=envoiFormCompleBadm" method="post" name="form" enctype="multipart/form-data">
        <input type="hidden" name="codeMouvement" value="{{codeMouvement}}">
        <input type="hidden" name="idMateriel" value="{{items.0.num_matricule}}">

        <div class="row">    
          {{ form.inputReadonly('dateDemande', 'Date', dateDemande|date('d/m/Y'), {endpoint: '12', class:'col-md-3'}) }}
            <div class="codeMouvement">
                <h3  id="codeMouvement" >{{codeMouvement}}</h3>
            </div>
        </div>

        <div class="row">
            {{ form.sousTitre('Caractéristiques du matériel', {class: 'sousTitre'})}}
        </div>
        <div class="row">
           
                {{form.inputReadonly('designation', 'Désignation ', items.0.designation,{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('idMateriel', 'ID matériel ', items.0.num_matricule,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('numSerie', 'N° Série ', items.0.num_serie,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            {% if codeMouvement == 'ENTREE EN PARC'  %}  
                {{form.inputText('numParc', 'N° Parc  ', items.0.num_parc,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}   
            {% else %}
                {{form.inputReadonly('numParc', 'N° Parc  ', items.0.num_parc,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            {% endif %}
        </div>
        <div class="row">
            
                {{form.inputReadonly('groupe', 'Groupe ', items.0.famille,{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('constructeur', 'Constructeur', items.0.constructeur ,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('modele', 'Modèle ', items.0.modele,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('anneeModele', 'Année du modèle', items.0.annee,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
           
        </div>
        <div class="row d-flex">
            {{form.inputReadonly('affectation', ' Affectation', items.0.affectation,{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            {{form.inputReadonly('dateAchat', 'Date d’achat ', items.0.date_achat|date("d/m/Y"),{endpoint: '12', class: 'col-lg-3 col-md-6' } )}}
        </div>


        <div class="row">
            {{ form.sousTitre('Etat machine', {class: 'sousTitre'})}}
        </div>
        <div class="row">
            {{form.inputReadonly('heuresMachine', 'Heures machine', items.0.heure|number_format(2,',', '.'),{endpoint: '12', class: 'col-md-6'})}}
            {{form.inputReadonly('kilometrage', 'Kilométrage', items.0.km|number_format(2,',', '.'),{endpoint: '12', class: ' col-md-6'})}}    
        </div>


        <div class="row">
            {{ form.sousTitre('Service émetteur', {class: 'sousTitre'})}}
        </div>
        <div class="row">
            
            {{form.inputReadonly('agenceEmetteur', 'Agence', agenceEmetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('serviceEmetteur', 'Service', serviceEmetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('casierEmetteur', 'Casier', items.0.casier_emetteur,{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            
        </div>



        <div class="row">
            {{ form.sousTitre('Service destinataire', {class: 'sousTitre'})}}
        </div>
        <div class="row">
            
            {{form.select('agenceDestinataire', 'Agence', agenceDestinataire,{endpoint: '12', class: 'col-lg-4 col-md-6', default:'true', required: 'required'})}}
            {{form.select('serviceDestinataire', 'Service','',{endpoint: '12', class: 'col-lg-4 col-md-6', default:'true', required: 'required'})}}
                        
            {{form.select('casierDestinataire', 'Casier Destinataire', '',{endpoint: '12', class: 'col-lg-4 col-md-6', default:'true', required: 'required'})}}
        </div>
        
        <div class="row">
            {{form.inputText('motifArretMateriel', 'Motif', '',{required: 'required', endpoint: '12', maxlength: '100' } )}}
        </div>



        {% if codeMouvement == 'CHANGEMENT AGENCE/SERVICE' or codeMouvement == 'CHANGEMENT DE CASIER' or codeMouvement == 'CESSION D\'ACTIF' or codeMouvement == 'MISE AU REBUT' %}
            <div class="row">
                {{ form.sousTitre('Entrée en parc', {class: 'sousTitre'})}}
            </div>
            <div class="row">
                {{form.inputReadonly('etatAchat', 'Etat à l’achat:', etatAchat,{required: 'required', endpoint: '12', class: ' col-md-6' , disabled: 'disabled'})}}
                {{form.inputDate('dateMiseLocation', 'Date de mise en location', dateMiseLocation,{endpoint: '12', class: ' col-md-6', disabled: 'disabled'})}}    
            </div>

        {% else %}
            <div class="row">
                {{ form.sousTitre('Entrée en parc', {class: 'sousTitre'})}}
            </div>
            <div class="row">
                {{form.inputReadonly('etatAchat', 'Etat à l’achat:', etatAchat,{required: 'required', endpoint: '12', class: ' col-md-6'})}}
                {{form.inputDate('dateMiseLocation', 'Date de mise en location', dateMiseLocation,{endpoint: '12', class: ' col-md-6'})}}    
            </div>
        {% endif %}

        



        <div class="row">
            {{ form.sousTitre('Valeur (MGA)', {class: 'sousTitre'})}}
        </div>
        <div class="row">
            {{form.inputReadonly('coutAcquisition', 'Coût d’acquisition', coutAcquisition|number_format(2,',', '.'),{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            {{form.inputReadonly('amortissement', 'Amortissement', items.0.amortissement|number_format(2,',', '.'),{endpoint: '12', class: 'col-lg-4 col-md-6'})}} 
            {{form.inputReadonly('valeurNetComptable', 'VNC', vnc|number_format(2,',', '.'),{endpoint: '12', class: 'col-lg-4 col-md-6'})}}   
        </div>


        {% if codeMouvement == 'ENTREE EN PARC' or codeMouvement == 'CHANGEMENT AGENCE/SERVICE' or codeMouvement == 'CHANGEMENT DE CASIER' %}
            <div class="row">
                {{ form.sousTitre('Cession d’actif', {class: 'sosuTitreGiser'})}}
            </div>
            <div class="row">
                {{form.inputText('nomClient', 'Nom client', '',{endpoint: '12', class: 'col-lg-4 col-md-6', disabled: 'disabled'})}}
                {{form.select('modalitePaiement', 'Modalité de paiement', {Cheque:'Chèque', Virement:'Virement'},{endpoint: '12', class: 'col-lg-4 col-md-6', default:'true', disabled: 'disabled'})}} 
                {{form.inputNumber('prixHt', 'Prix HT', '',{ step:'0.01',  endpoint: '12', class: 'col-lg-4 col-md-6', disabled: 'disabled'})}}   
            </div>


            <div class="row">
                {{ form.sousTitre('Mise au rebut', {class: 'sosuTitreGiser'})}}
            </div>
            <div class="row">
                {{form.inputText('motifMiseRebut', 'Motif de mise au rebut', '',{endpoint: '12', maxlength: '100', disabled: 'disabled'})}}     
            </div>
        {% else %}
            <div class="row">
                {{ form.sousTitre('Cession d’actif', {class: 'sousTitre'})}}
            </div>
            <div class="row">
                {{form.inputText('nomClient', 'Nom client', '',{endpoint: '12', class: 'col-lg-4 col-md-6', required: 'required'})}}
                {{form.select('modalitePaiement', 'Modalité de paiement', {Cheque:'CHEQUE', Virement:'VIREMENT'},{endpoint: '12', class: 'col-lg-4 col-md-6', default:'true', required: 'required'})}} 
                {{form.inputNumber('prixHt', 'Prix HT', '',{ step:'0.01',  endpoint: '12', class: 'col-lg-4 col-md-6', required: 'required'})}}   
            </div>


            <div class="row">
                {{ form.sousTitre('Mise au rebut', {class: 'sousTitre'})}}
            </div>
            <div class="row">
                {{form.inputText('motifMiseRebut', 'Motif de mise au rebut', '',{endpoint: '12', maxlength: '100', required: 'required'})}}     
            </div>
            {% if codeMouvement == 'MISE AU REBUT' %}
                <div class="row">
                    {{form.inputFile('imageRebut', 'Image du matériel', {accept:'.jpg'})}}
                </div>
            {% endif %}
        {% endif %}

        



        <div class="row mt-5">
            {{form.button('submit', 'Envoyer', 'badmComplet', 'primary')}}
            {# {{form.button('annuler', 'Annuler', 'reset', 'secondary')}} #}
        </div>
    </form>
</div>        
    {% endblock content %}


    {% block javascript %}
    <script type="module" src="/Hffintranet/Views/dist/badm.bundle.js"></script>
    {% endblock %}