{% import "macroForm.html.twig" as form %}

{% block content %}
{% include "/main/Principe.html.twig" %}
    <div class=" container">
        <div class="card">
            <div class="card-body">

                <div class="col" style="text-align: right;font-weight: bold;">
                    <h2> Ajout Personnel</h2>
                </div>
                <div class="d-flex flex-row ">
                    <div class="p-2">
                        <a href="/Hffintranet/index.php?action=PersonnelList" class="btn btn-warning fw-bold">
                            Liste 
                        </a>

                    </div>
                </div>
                <form action="" method="POST"> 
                  
                        
                    
                    <div class="row">
                        {{ form.select('codeSage', 'Agence - Service SAGE', codeSage, {endpoint:'12', class:'col-md-4'})}}
                        {{ form.select('codeIrium', 'Agence IRIUM', codeIrium, {endpoint:'12', class:'col-md-4'})}}
