                    </div>

                    <div class="row">
                        {{ form.inputText('nom', 'Nom', infoPersonnelId.0.Nom, {endpoint:'12', class:'col-md-6'})}}
                        {{ form.inputText('prenoms', 'Pr√©noms', infoPersonnelId.0.Prenoms, {endpoint:'12', class:'col-md-6'})}}
