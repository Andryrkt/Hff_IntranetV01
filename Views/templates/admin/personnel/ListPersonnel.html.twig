
{% extends "baseTemplate.html.twig" %}


{% block content %}
{% include "/main/Principe.html.twig" %}
   

    <div class="container">
        <div class="card">
            <div class="card-body">

                <div class="col" style="text-align: right;font-weight: bold;">
                    <h2>Personnels</h2>
                </div>
                <div class="d-flex flex-row ">
                    <div class="p-2">
                        <a href="/Hffintranet/index.php?action=Personnels" class="btn btn-success fw-bold">
                            Add
                        </a>

                    </div>
                </div>
                
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th>Actions</th>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prenoms</th>
                            <th>Matricule</th>
                            <th>Agence et service Sage</th>
                            <th>Agence et service Irium</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in infoPersonnel %}
                            
                        
                        <tr>
                            <td>
                                <a href="/Hffintranet/index.php?action=updatePersonnel&matricule={{item.Matricule}}" class="btn btn-warning">Modifier</a>
                            </td>
                            <td>{{item.ID_Personnel}}</td>
                            <td>{{item.Nom}}</td>
                            <td>{{item.Prenoms}}</td>
                            <td>{{item.Matricule}}</td>
                            <td>{{item.Code_AgenceService_Sage}}</td>
                            <td>{{item.Code_AgenceService_IRIUM}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}