{% extends "baseTemplate.html.twig" %}

{% block title %}
	Historique des consultations
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/Hffintranet/Views/css/list.css">
	<link rel="stylesheet" href="/Hffintranet/Views/css/admin/historisation/consultation-page/index.css">
{% endblock %}

{% block content %}
	<div class="container mt-4">
		<h3 class="perso-titre">Historique des consultations</h3>

		<!-- Filtres -->
		<form id="filters" class="row g-3 mb-4">
			<div class="col-md-3">
				<label for="filterUser" class="form-label">Utilisateur</label>
				<input type="text" class="form-control" id="filterUser" placeholder="Nom de l'utilisateur">
			</div>
			<div class="col-md-3">
				<label for="filterPage" class="form-label">Nom de la page</label>
				<input type="text" class="form-control" id="filterPage" placeholder="Nom de la page">
			</div>
			<div class="col-md-3">
				<label for="filterDate" class="form-label">Date</label>
				<input type="date" class="form-control" id="filterDate">
			</div>
			<div class="col-md-3 d-flex align-items-end">
				<button type="button" class="btn btn-primary w-100" id="filter">Appliquer les filtres</button>
			</div>
		</form>

		<!-- Tableau -->
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Nom de l'utilisateur</th>
						<th>Nom de la page</th>
						<th>Date et heure</th>
						<th>Param√®tres</th>
						<th>Machine</th>
					</tr>
				</thead>
				<tbody
					id="consultationTable"><!-- Rempli dynamiquement -->
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="/Hffintranet/Views/js/admin/historisation/consultation-page/index.js" type="module"></script>
{% endblock %}
