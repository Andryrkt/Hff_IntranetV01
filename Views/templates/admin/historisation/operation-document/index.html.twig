{% extends "baseTemplate.html.twig" %}

{% block title %}
	Historique des opérations de documents
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/Hffintranet/Views/css/list.css">
	<link rel="stylesheet" href="/Hffintranet/Views/css/admin/historisation/operation-document/index.css">
{% endblock %}

{% block content %}
	<div class="container mt-4">
		<h3 class="perso-titre">Historique des opérations sur les documents</h3>

		<!-- Tableau -->
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Numéro du document</th>
						<th>Date</th>
						<th>Utilisateur</th>
						<th>Type d’opération</th>
						<th>Type de document</th>
						<th>Statut</th>
						<th>Libellé</th>
					</tr>
				</thead>
				<tbody
					id="operationTable"><!-- Rempli dynamiquement -->
				</tbody>
			</table>
			<!-- Spinner Loader -->
			<div id="spinner" style="display: none; height: 60px;">
				<div class="loader"></div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="/Hffintranet/Views/js/admin/historisation/operation-document/index.js" type="module"></script>
{% endblock %}
