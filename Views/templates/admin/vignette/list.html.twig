{% extends "baseTemplate.html.twig" %}

{% block title %}
	Vignettes
{% endblock %}

{% block breadCrumb %}{% endblock %}

{% block content %}
	<div class="container my-4">
		<div class="card">
			<div class="card-body">
				<h3 class="perso-titre">
					Liste des Vignettes
				</h3>
				<a href="{{ path("vignette_new")}}" class="btn btn-success fw-bold my-3">
					Ajouter nouvelle vignette
				</a>
				<a href="{{ path("application_index")}}" class="btn btn-primary fw-bold my-3 ms-2">
					Liste des applications
				</a>
				<table class="table">
					<thead class="table-dark">
						<tr>
							<th>Actions</th>
							<th>Reference</th>
							<th>Nom du vignette</th>
							<th>Code App</th>
							<th>Nom App</th>
						</tr>
					</thead>
					<tbody>
						{% for row in data %}
							<tr>
								<td>
									<div class="dropdown">
										<button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000; font-weight: 700">
											Actions
										</button>
										<ul class="dropdown-menu dropdown-menu-end" id="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
											<li>
												<a class="dropdown-item fw-bold" href="{{ row.urlUpdate }}">Modifier</a>
											</li>
										</ul>
									</div>
								</td>
								<td>{{ row.reference }}</td>
								<td>{{ row.nom }}</td>
								<td>{{ row.codeApp }}</td>
								<td>{{ row.nomApp }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="{{ App.base_path }}/Views/js/admin/vignette/list.js?v=2025.10.22.08.00" type="module"></script>
{% endblock %}
