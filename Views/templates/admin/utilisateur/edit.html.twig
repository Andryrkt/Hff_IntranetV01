{% extends "baseTemplate.html.twig" %}


{% block content %}
	<div class=" container">
		<div class="card">
			<div class="card-body">

				<div class="container">
					<h2 class="text-center fs-1 fw-bold bg-black py-2" style="color: #FBBB01">
						Formulaire d'ajout Utilisateur
					</h2>

					<a href="{{path("utilisateur_index")}}" class="btn btn-sm  text-white my-3 fw-bold" style="background-color: #FBBB01;">Liste</a>

					{{ form_start(form) }}
					{{ form_errors(form)}}

					<div class="row">
						<div class="col-12 col-md-6">

							{{ form_row(form.nom_utilisateur) }}
							{{ form_row(form.matricule) }}
							{{ form_row(form.mail) }}


						</div>
						<div class="col-12 col-md-6">

							{{ form_row(form.role)}}

							{{ form_row(form.applications)}}


						</div>
					</div>


					<button type="submit" class="btn btn-primary">
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
					{{ form_end(form) }}
				</div>

			</div>
		</div>

	{% endblock %}
