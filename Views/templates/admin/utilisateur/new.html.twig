{% extends "baseTemplate.html.twig" %}

{% block stylesheets %}
	<style>
		.select2-container .select2-selection--single {
			height: 38px;
			line-height: 36px;
			border: 1px solid #ced4da;
			border-radius: 4px;
		}
		.select2-container--default .select2-selection--single .select2-selection__rendered {
			color: #495057;
			padding: 0.375rem 0.75rem;
		}
		.select2-container--default .select2-selection--single .select2-selection__arrow {
			height: 36px;
		}
		.select2-container--default .select2-selection--multiple {
			min-height: 38px;
			border: 1px solid #ced4da;
			border-radius: 4px;
		}
		.select2-container--default .select2-selection--multiple .select2-selection__rendered {
			padding: 0.375rem 0.75rem;
		}
	</style>
{% endblock %}

{% block content %}
	<div class=" container">
		<div class="card">
			<div class="card-body">

				<div class="container">
					<h2 class="text-center fs-1 fw-bold bg-black py-2" style="color: #FBBB01">
						Formulaire d'ajout Utilisateur
					</h2>

					<a href="{{path("utilisateur_index")}}" class="btn btn-sm  text-white my-3 fw-bold" style="background-color: #FBBB01;">Liste</a>

					{{ form_start(form) }}
					{{ form_errors(form)}}

					<div class="row">
						<div class="col-12 col-md-6">

							{{ form_row(form.nom_utilisateur, {'attr': {'class': 'selectUser form-control'}}) }}
							{{ form_row(form.matricule) }}
							{{ form_row(form.mail) }}
							{{ form_row(form.roles)}}
							<div class="row">
								<div class="col-12 col-md-6">
									{{ form_row(form.applications)}}
								</div>
								<div class="col-12 col-md-6">
									{{ form_row(form.societtes)}}
								</div>
							</div>

						</div>
						<div class="col-12 col-md-6">
							{{form_row(form.agences)}}
							{{ form_row(form.servicesUtilisateur)}}
							{{ form_row(form.agenceAutoriser)}}
							{{form_row(form.services)}}
							{{ form_row(form.personnels, {'attr': {'class': 'selectUser form-control'}})}}
							{{form_row(form.superieurs, {'attr': {'class': 'superieurs'}})}}
							{{ form_row(form.fonction)}}
						</div>
					</div>


					<button type="submit" class="btn btn-primary">
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
					{{ form_end(form) }}
				</div>

			</div>
		</div>

	{% endblock %}

	{% block javascript %}
		<script src="/Hffintranet/Views/js/admin/users.js"></script>
	{% endblock %}
