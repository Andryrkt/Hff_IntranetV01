{% extends "baseTemplate.html.twig" %}

{% block title %}
	Listes des utilisateurs
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/new.css?v=2025.10.22.08.00">
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/list.css?v=2025.10.22.08.00">
{% endblock %}

{% block breadCrumb %}{% endblock %}

{% block content %}
	<div class="container my-4">
		<div class="card">
			<div class="card-body">
				<h3 class="perso-titre">
					Liste des utilisateurs
				</h3>
				{% include "admin/utilisateur/shared/_formulaireRecherche.html.twig" %}
				<a href="{{ path("utilisateur_new")}}" class="btn btn-success fw-bold my-3">
					Ajouter nouvel utilisateur
				</a>
				<table class="table">
					<thead class="table-dark">
						<tr>
							<th>
								<i class="fas fa-ellipsis-vertical"></i>
							</th>
							<th>Nom d'utilisateur</th>
							<th>matricule</th>
							<th>mail</th>
							<th>Rôle</th>
							<th>Applications</th>
							<th>Code Sage</th>
							<th>Agence Autoriser</th>
							<th>Service Autoriser</th>
						</tr>
					</thead>
					<tbody id="tableBody">
						{% for item in data %}
							<tr>
								<td>
									<div class="dropdown">
										<button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000; font-weight: 700">
											<i class="fas fa-ellipsis-vertical"></i>
										</button>
										<ul class="dropdown-menu dropdown-menu-end" id="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
											<li>
												<a class="dropdown-item fw-bold" href="{{ path("utilisateur_show", {id: item.id})}}">Détails</a>
											</li>
											<li>
												<a class="dropdown-item fw-bold" href="{{ path("utilisateur_update", {id: item.id})}}">Modifier</a>
											</li>
											<li>
												<a class="dropdown-item fw-bold" style="color: red;" href="{{ path("utilisateur_delete", {id: item.id})}}">Supprimer</a>
											</li>
										</ul>
									</div>
								</td>
								<td data-label="username">{{item.nomUtilisateur}}</td>
								<td data-label="matricule">{{item.matricule}}</td>
								<td data-label="mail">{{item.mail}}</td>
								<td data-label="role">
									<ul>
										{% for a in item.roles %}
											<li>{{a.rolename}}</li>
										{% endfor %}
									</ul>
								</td>
								<td data-label="applications">
									<ul>
										{% for a in item.applications %}
											<li>{{a.codeApp}}</li>
										{% endfor %}
									</ul>
								</td>
								<td data-label="code-sage">{{item.agenceServiceIrium.serviceSagePaie}}</td>
								<td data-label="agence-autoriser">
									<ul>
										{% for a in item.agenceAutoriserCode %}
											<li>{{a}}</li>
										{% endfor %}
									</ul>
								</td>
								<td data-label="service-autoriser">
									<ul>
										{% for a in item.serviceAutoriserCode %}
											<li>{{a}}</li>
										{% endfor %}
									</ul>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="{{ App.base_path }}/Views/js/utils/list/searchList.js?v=2025.10.22.08.00" type="module"></script>
{% endblock %}
