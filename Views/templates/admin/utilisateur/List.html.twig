{% extends "baseTemplate.html.twig" %}


{% block content %}


	<div class="container">
		<div class="card">
			<div class="card-body">

				<h2 class="text-center fs-1 fw-bold bg-black py-2" style="color: #FBBB01">
					Listes des utilisateurs
				</h2>

				<div class="d-flex flex-row ">
					<div class="p-2">
						<a href="{{ path("utilisateur_new")}}" class="btn btn-success fw-bold">
							Add
						</a>

					</div>
				</div>

				<table class="table">
					<thead class="table-dark">
						<tr>
							<th>Actions</th>
							<th>Nom d'utilisateur</th>
							<th>matricule</th>
							<th>mail</th>
							<th>Rôle</th>
						</tr>
					</thead>
					<tbody>


						{% for item in data %}

							<tr>
								<td>
									<div class="dropdown">
										<button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000; font-weight: 700">
											Actions
										</button>
										<ul class="dropdown-menu dropdown-menu-end" id="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
											<li>
												<a class="dropdown-item fw-bold" href="{{ path("personnel_show", {id: item.id})}}">Détails</a>
											</li>
											<li>
												<a class="dropdown-item fw-bold" href="{{ path("personnel_update", {id: item.id})}}">Modifier</a>
											</li>
											<li>
												<a class="dropdown-item fw-bold" style="color: red;" href="{{ path("personnel_delete", {id: item.id})}}">Supprimer</a>
											</li>
										</ul>
									</div>
								</td>
								<td>{{item.nomUtilisateur}}</td>
								<td>{{item.matricule}}</td>
								<td>{{item.mail}}</td>
								<td>{{item.role.rolename}}</td>


							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
