{% extends "baseTemplate.html.twig" %}

{% block title %}
	Modifier une page HFF
{% endblock %}

{% block breadCrumb %}{% endblock %}

{% block content %}
	<div class=" container my-4">
		<div class="card">
			<div class="card-body">
				<div class="container">
					<h3 class="perso-titre">Formulaire modification page HFF</h3>
					<a href="{{path("page_hff_index")}}" class="btn btn-sm  text-white my-3 fw-bold" style="background-color: #FBBB01;">Liste des pages HFF</a>
					{{ form_start(form) }}
					{{ form_errors(form)}}
					<div class="row">
						<div class="col-12 col-md-6">
							{{ form_row(form.nom) }}
							{{ form_row(form.nomRoute) }}
						</div>
						<div class="col-12 col-md-6">
							{{ form_row(form.lien) }}
						</div>
					</div>
					<button type="submit" class="btn btn-primary">
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
