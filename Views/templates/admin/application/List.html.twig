{% extends "baseTemplate.html.twig" %}

{% block title %}
	Applications
{% endblock %}

{% block content %}
	<div class="container mt-6 mb-4">
		<div class="card">
			<div class="card-body">
				<h3 class="perso-titre">
					Liste des Applications
				</h3>
				<div class="d-flex flex-row ">
					<div class="p-2">
						<a href="{{ path("application_new")}}" class="btn btn-success fw-bold">
							Ajouter nouvelle application
						</a>
					</div>
				</div>
				<table class="table">
					<thead class="table-dark">
						<tr>
							<th>Actions</th>
							<th>Id</th>
							<th>Nom</th>
							<th>Code Applications</th>
							<th>Dernière numéro</th>
							<th>Pages</th>
						</tr>
					</thead>
					<tbody>
						{% for item in data %}
							<tr>
								<td>
									<div class="dropdown">
										<button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000; font-weight: 700">
											Actions
										</button>
										<ul class="dropdown-menu dropdown-menu-end" id="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
											<li>
												<a class="dropdown-item fw-bold" href="{{ path("application_update", {id: item.id})}}">Modifier</a>
											</li>
											<li>
												<a class="dropdown-item fw-bold" style="color: red;" href="{{ path("application_delete", {id: item.id})}}">Supprimer</a>
											</li>
										</ul>
									</div>
								</td>
								<td>{{item.id}}</td>
								<td>{{item.nom}}</td>
								<td>{{item.codeApp}}</td>
								<td>{{item.derniereId}}</td>
								<td>
									<ul>
										{% for page in item.pages %}
											<li>
												{{ page.nom ~ ' ' ~ page.lien}}
											</li>
										{% endfor %}
									</ul>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
