{% extends "baseTemplate.html.twig" %}

{% block title %}
	{{message == 'verification prix' ? 'Soumission devis pour vérification prix' : 'Soumission devis pour validation'}}
{% endblock %}

{% block stylesheets %}
	<link href="{{ App.base_path }}/Views/css/new.css?v=2025.10.22.08.00" rel="stylesheet"/>
	<link href="{{ App.base_path }}/Views/css/magasin/devis/soumission.css?v=2025.10.22.08.00" rel="stylesheet"/>
{% endblock %}
{% block content %}
	<div class=" container mt-6">
		<div class="card">
			<div class="card-body">

				<div class="container">
					<div class="row">
						<div class="col-12 col-md-11"></div>
						<div class=" col-12 col-md-1">
							<a href="{{ path("devis_magasin_liste")}}" class="tablinks p-2 btn btn-outline-warning " style="text-decoration: none;color:black">Retour</a>
						</div>
					</div>

					{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'id': 'upload-form'}}) }}
					{{ form_errors(form)}}
					<div class="row">
						{{ form_row(form.numeroDevis) }}
					</div>

					<div class="row {{message == 'verification prix' ? '' : 'd-none'}}">
						<div class="col-12 col-md-4">
							{{ form_row(form.estValidationPm) }}
						</div>
					</div>
					<div class="row {{message == 'verification prix' ? '' : 'd-none'}}">
						<div class="col-12 col-md-4">
							{{ form_row(form.tacheValidateur) }}
						</div>
					</div>
					<div class="row {{message == 'verification prix' ? '' : 'd-none'}}">
						<div class="col-12 col-md-12">
							{{ form_row(form.observation) }}
						</div>
					</div>
					<div class="row">
						<div class="col-12 col-md-3">
							<p>Veuillez insérer
								<strong>le devis *</strong>
							</p>
							{% include '/partials/_dropZoneFile.html.twig' with {'id': '1', 'form': form, 'fieldName': 'pieceJoint01'} %}
						</div>

						<div class="col-12 col-md-3 {{message == 'verification prix' ? '' : 'd-none'}}">
							<p>Insérer
								<strong>les autres fichiers ici
								</strong>
							</p>
							{% include '/partials/_dropZoneFileMultiple.html.twig' with {'id': '2', 'form': form, 'fieldName': 'pieceJoint2'} %}
						</div>
					</div>

					<div class="d-flex justify-content-end">
						<button type="submit" class="btn bouton mt-2" id="btn-enregistre-devis" data-confirmation data-form="#upload-form" data-confirmation-text="Vous êtes en train de soumettre le devis N° {{numDevis}} pour {{message}}">
							<i class="fas fa-save"></i>
							Enregistrer
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
		<div
			id="file-viewer" class="mt-3">
			<!-- Onglets -->
			<ul class="nav nav-tabs" id="pdfTabs" role="tablist">
				<li class="nav-item" role="presentation">
					<button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab">
						Devis
					</button>
				</li>
				{% if message == 'verification prix' %}
					<li class="nav-item" role="presentation">
						<button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab">
							Autres fichiers
						</button>
					</li>
				{% endif %}
			</ul>

			<!-- Contenu des onglets -->
			<div
				class="tab-content border border-top-0 p-3" id="pdfTabContent">
				<!-- Tab 1 -->
				<div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
					<div id="file-list-1" class="mt-3"></div>
				</div>
				{% if message == 'verification prix' %}
					<!-- Tab 2 -->
					<div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
						<div id="file-list-2" class="mt-3"></div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script type="module" src="{{ App.base_path }}/Views/js/magasin/devis/soumission.js?v=2025.10.22.08.00"></script>
{% endblock %}
