<!-- DEBUT recherche -->
<div class="accordion" id="formAccordion">
	<div class="accordion-item">
		<h2 class="accordion-header">
			<button class="accordion-button enteteAccordion" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
				Formulaire de recherche
			</button>
		</h2>
		<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#formAccordion">
			<div class="accordion-body">
				{{ form_start(form, {'method': 'POST'}) }}
				<div class="row">
					<div class="col-12 col-md-2">
						{{ form_row(form.numeroDevis) }}
						{{ form_row(form.codeClient) }}
						<div id="suggestion-code-client" class="suggestions-container"></div>
						<div id="loader-code-client" class="spinner" style="display: none;">Chargement...</div>

					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.Operateur) }}
						{{ form_row(form.CreePar) }}
					</div>

					<div class="col-12 col-md-2">
						<div class="spinner-container">
							{{ form_row(form.emetteur.agence, {'attr': {'class': 'agenceEmetteur'}}) }}
							{% include 'components/spinner.html.twig' with {
								'id': 'spinner-service-emetteur',
								'size': 'small',
								'class': 'spinner-absolute'
							} %}
						</div>
						<div id="service-container-emetteur" class="mb-3">
							{{ form_label(form.emetteur.service) }}
							{{ form_widget(form.emetteur.service, {'attr': {'class': 'serviceEmetteur'}}) }}
						</div>
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.dateCreation) }}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.statutDw) }}
						{{ form_row(form.statutIps) }}
						{{ form_row(form.statutBc) }}
					</div>
					<div class="col-12 col-md-2"></div>
				</div>
				<div class="d-flex justify-content-end mb-2">
					<button class="btn btn-warning fw-bold" type="submit">
						<i class="fab fa-searchengin"></i>
						Recherche</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
<div class="row mt-2">
	<div class="align-self-center">
		<a href="{{ path("devis_magasin_export_excel_list_devis_magasin")}}" class="btn btn-sm bg-success text-white fw-bold me-3 afficher-overlay">
			<i class="fas fa-table"></i>
			Excel
		</a>
	</div>
</div>
