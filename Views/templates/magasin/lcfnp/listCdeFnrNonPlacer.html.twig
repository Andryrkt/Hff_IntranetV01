{% extends "baseTemplate.html.twig" %}

{% block stylesheets%}
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/list.css">
	<link rel="stylesheet" href="{{ App.base_path }}/Views/css/magasin/magasin.css">
	<link href="{{ App.base_path }}/Views/css/dit/news.css" rel="stylesheet"/>
{% endblock %}
{% import "macroForm.html.twig" as macroForm %}

{% block content %}
	<div id="conteneur" data-page-type="liste_cde_fnr_non_place">
		<div class="container mb-3">
			<h3 class="perso-titre">
				Liste des commande fournisseurs non placée
			</h3>

			{% include "/magasin/partials/lcfnp/_formRechLcfnp.html.twig" %}
		</div>

		<div class="container-fluid">
			<div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
				<table class="table rounded table-plein-ecran">
					<thead class="table-dark sticky-top">
						<tr>
							<th class="text-center">N° Cmd Frs</th>
							<th class="text-center">Date Cmd Frs</th>
							<th class="text-center">N° Frs</th>
							<th class="text-center">Nom Frs</th>
							<th class="text-center">Mont. Cmd</th>
							<th class="text-center">Devis</th>
							<th class="text-center">N° OR</th>
							<th class="text-center">Commentaire</th>
							<th class="text-center">client</th>
							<th class="text-center">Obs</th>
						</tr>
					</thead>
					<tbody id="tableBody">
						{% for item in data %}
							<tr>
							<td> {{ item.n_commande}}</td>
							<td> {{ item.date_cmd}}</td>
							<td> {{ item.n_frs}}</td>
							<td> {{ item.nom_frs}}</td>
							<td> {{ item.mont_ttc}}</td>
							<td> {{ item.devis}}</td>
							<td> {{ item.n_or}}</td>
							<td> {{ item.commentaire}}</td>
							<td> {{ item.client}}</td>
							<td> {{ item.obs}}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="{{ App.base_path }}/Views/js/magasin/main.js" type="module"></script>
	<script src="{{ App.base_path }}/Views/js/magasin/autoFrsnp.js"  type="module"></script>
{% endblock %}